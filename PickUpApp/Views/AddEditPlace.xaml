<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="PickUpApp.AddEditPlace">
 <ContentPage.Padding>
    <OnPlatform x:TypeArguments="Thickness">
      <OnPlatform.iOS>0, 20, 0, 0</OnPlatform.iOS>
    </OnPlatform>
  </ContentPage.Padding>
	<ContentPage.Content>
	<StackLayout x:Name="stacker" ><ActivityIndicator IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}" Color="Black" />
		<Label Text="Place Name" HorizontalOptions="FillAndExpand" />
			<Entry Text="{Binding CurrentPlace.PlaceName}" WidthRequest="400" HorizontalOptions="FillAndExpand" />
			<Label Text="Address" HorizontalOptions="FillAndExpand" />
			<Entry x:Name="txtAddress" Text="{Binding CurrentPlace.Address}" WidthRequest="400" HorizontalOptions="FillAndExpand" />

			<StackLayout Orientation="Horizontal">
			<Button HorizontalOptions="StartAndExpand" x:Name="btnSave"  Text="Save" />
			<Button HorizontalOptions="End" x:Name="btnCancel"  Text="Cancel" />
			</StackLayout>

		
	</StackLayout>
	</ContentPage.Content>
</ContentPage>
