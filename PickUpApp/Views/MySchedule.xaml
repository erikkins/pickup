<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="ACTIVITIES" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="PickUpApp.MySchedule">
	<ContentPage.Content>
	<StackLayout><ActivityIndicator IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}" Color="Black" />
		<ListView x:Name="lstSched" HasUnevenRows="true" ItemsSource="{Binding RecurringSchedule}" BackgroundColor="#EEECF3">
		<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell Height="75" StyleId="disclosure">
						<ViewCell.ContextActions>
							<MenuItem Clicked="OnDelete" CommandParameter="{Binding .}"
               					Text="Delete" IsDestructive="True" />
						</ViewCell.ContextActions>
						<ViewCell.View>
							<StackLayout HeightRequest="75" Orientation="Horizontal"><BoxView WidthRequest="10"></BoxView>
							<Label Text="{Binding Activity}" TranslationX="5" FontSize="20" FontAttributes="Bold" VerticalOptions="Center" HorizontalOptions="StartAndExpand"  /><Label VerticalOptions="Center" Text="["></Label><Label Text="{Binding Frequency}" VerticalOptions="Center"  HorizontalOptions="End"  /><Label VerticalOptions="Center" Text="]"></Label>
							</StackLayout>								

						</ViewCell.View>
					</ViewCell>
				</DataTemplate>
			</ListView.ItemTemplate>
		</ListView>
	</StackLayout>
	</ContentPage.Content>
</ContentPage>
