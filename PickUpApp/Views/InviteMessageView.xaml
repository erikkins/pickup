<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="PickUpApp.InviteMessageView">
	<ContentPage.Content>
	<StackLayout Orientation="Vertical" VerticalOptions="CenterAndExpand">
	<StackLayout Orientation="Horizontal">
	<Label HorizontalOptions="Start" Text="Message for: "></Label><Label HorizontalOptions="StartAndExpand" Text="{Binding CurrentInvite.ConfirmedBy}"></Label>
	</StackLayout>
	<ListView x:Name="lstMessages" ItemsSource="{Binding Messages}">
	<ListView.ItemTemplate>
				<DataTemplate>
					<ViewCell>
						<ViewCell.View>
							<StackLayout Orientation="Horizontal" VerticalOptions="Center">
								<Label Text="{Binding Message}" HorizontalOptions="StartAndExpand"  />
							</StackLayout>
						</ViewCell.View>
					</ViewCell>
				</DataTemplate>
	</ListView.ItemTemplate>
	</ListView>
	<Editor x:Name="messageEditor" ></Editor>
	<Button Text="Send Message" BackgroundColor="Green" TextColor="White" Clicked="OnMessage"></Button>
	<Button Text="Close" BackgroundColor="Gray" TextColor="Black" Clicked="OnClose"></Button>
	</StackLayout>
	</ContentPage.Content>
</ContentPage>
