<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="Location" xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" xmlns:maps="clr-namespace:Xamarin.Forms.Maps;assembly=Xamarin.Forms.Maps" x:Class="PickUpApp.LocationSearch">
	<ContentPage.Content>
<StackLayout>
<SearchBar x:Name="searchBar" Placeholder="Search Address"></SearchBar>
	<maps:Map WidthRequest="320" HeightRequest="200"
            x:Name="map"
            IsShowingUser="true" 
            MapType="Hybrid"
        />
<StackLayout Orientation="Horizontal">
        <Button x:Name="btnCancel" Text="Cancel" HorizontalOptions="StartAndExpand"></Button>
        <Button x:Name="btnSave" Text="Save" HorizontalOptions="End"></Button>
         
        </StackLayout>
</StackLayout>
	</ContentPage.Content>
</ContentPage>
