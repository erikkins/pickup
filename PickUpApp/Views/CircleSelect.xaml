<?xml version="1.0" encoding="UTF-8"?>
<ContentPage Title="CircleSelect" xmlns="http://xamarin.com/schemas/2014/forms" 
	xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
	x:Class="PickUpApp.CircleSelect">
	<ContentPage.Content>
	<StackLayout VerticalOptions="End">
	<ActivityIndicator IsRunning="{Binding IsLoading}" IsVisible="{Binding IsLoading}" Color="Black" />
	<Label Text="Select your request recipients" HorizontalOptions="CenterAndExpand"/>
		<ScrollView Orientation="Vertical" IsClippedToBounds="true">
		<ListView x:Name="lstCircle" VerticalOptions="Start" ItemsSource="{Binding _myCircle}">
			<ListView.ItemTemplate>
					<DataTemplate>
						<SwitchCell Text="{Binding Fullname}" On="{Binding Selected}"></SwitchCell>
					</DataTemplate>
				</ListView.ItemTemplate>
		</ListView>
		</ScrollView>

		<StackLayout VerticalOptions="End" Orientation="Vertical">
			<Label Text="Instructions:"></Label>
			<Editor Text="{Binding Note}" MinimumHeightRequest="60" HeightRequest="90" BackgroundColor="Silver"></Editor>
			<Button x:Name="btnCancel" HorizontalOptions="Start" Text="Cancel"></Button>
			<Button x:Name="btnSend" HorizontalOptions="FillAndExpand" BackgroundColor="Red" TextColor="White" Text="Request PickUp"></Button>
		</StackLayout>
	</StackLayout>

	</ContentPage.Content>
</ContentPage>
